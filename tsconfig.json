{
	"compilerOptions": {
		"module": "commonjs",
		// "strict": true,
		"outDir": "dist",
		"removeComments": true,
		"experimentalDecorators": true,
		"target": "es5",
        "lib": ["es5"],
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"esModuleInterop": true,
		"types": ["node", "jest"],
		"typeRoots": ["node_modules/@types"],
		"noImplicitAny": false,
		"sourceMap": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true
	},
    "include": ["src/**/*.ts"],
}
